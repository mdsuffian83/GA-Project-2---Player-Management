<%- include('include/_login_header') -%>

   <div class="login text-center center-div" id="login">
      <div class="login container w-25 border py-5">
         <div class="login title pb-5">
            <h2 class="login font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout){%>
               <div class="login alter alert-success text-center">
                  <%= logout %>
               </div>
            <%} %>
         </div>
         <form action="/route/login" method="POST" class="pt-3">
            <div class="login form-group">
               <input type="email" class="login form-control" placeholder="email" name="email">
               <small class="login form-text text-muted text-left">Register Email Address</small>
            </div>
            <div class="login form-group">
               <input type="password" class="login form-control" name="password" placeholder="password">
            </div>
            <% if(locals.errorMessage != undefined){%>
               <div style="color:red; font-size: 10px;"><%=errorMessage%></div>
               <%} %>
            <button type="submit" class="login btn btn-success">Submit</button>
         </form>
      </div>
   </div>

<%- include('include/_login_footer') -%>