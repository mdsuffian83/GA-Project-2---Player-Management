<!-- include header -->
<%- include('include/_header')%>
<!-- /include header-->

<!-- Main Site-->
<main id="site-main">
   <div class="container">
      <div class="box-nav d-flex justify-between">
         <div class="filter">
            <a href="/tasks"><i class="fas fa-usert"></i>All Training</a>
         </div>
      </div>
      <div class="form-title text-center">
         <h2 class="text-dark">Update Training</h2>
         <span class="text-light">Use the below form to update training</span>
      </div>

      <!-- form handling -->
      <!-- <form action="/api/tasks" method="POST" id="update_task"> -->
      <form method="POST" id="update_task">
         <div class="new_user">
            <div class="form-group"> 
               <label for="name" class="text-light">Name</label>
               <input type="hidden" name="id" value="<%= task._id%>">
               <input type="text" name="name" readonly value="<%= task.name%>" placeholder="Mark Stoenis">
            </div>
            <div class="form-group">
               <label for="training" class="text-light">Training</label>
               <div class="radio inline">
                  <input type="radio" id="radio-2" name="training" value="Physical" <%= task.training == 'Physical' ? 'checked' : '' %>>
                  <label for="radio-2" class="radio-label">Physical</label>
               </div>
               <div class="radio inline">
                  <input type="radio" id="radio-3" name="training" value="Technical" <%= task.training == 'Technical' ? 'checked' : '' %>>
                  <label for="radio-3" class="radio-label">Technical</label>
               </div>
               <div class="radio inline">
                  <input type="radio" id="radio-4" name="training" value="Tactical" <%= task.training == 'Tactical' ? 'checked' : '' %>>
                  <label for="radio-4" class="radio-label">Tactical</label>
               </div>
            </div>
      
            <div class="form-group">
               <label for="coach" class="text-light">Coaches</label>
               <div class="radio inline">
                  <input type="radio" id="radio-5" name="coaches" value="Samuel" <%= task.coaches == 'Samuel' ? 'checked' : '' %>>
                  <label for="radio-5" class="radio-label">Samuel</label>
               </div>
               <div class="radio inline">
                  <input type="radio" id="radio-6" name="coaches" value="George" <%= task.coaches == 'George' ? 'checked' : '' %>>
                  <label for="radio-6" class="radio-label">George</label>
               </div>
               <div class="radio inline">
                  <input type="radio" id="radio-7" name="coaches" value="Marco" <%= task.coaches == 'Marco' ? 'checked' : '' %>>
                  <label for="radio-7" class="radio-label">Marco</label>
               </div>
               <div class="radio inline">
                  <input type="radio" id="radio-8" name="coaches" value="Hernandez" <%= task.coaches == 'Hernandez' ? 'checked' : '' %>>
                  <label for="radio-8" class="radio-label">Hernandez</label>
               </div>
            </div>
      
            <div class="form-group">
               <button type="submit" class="btn text-dark update">Save</button>
            </div>
      
         </div>
      </form>

   </div>
</main>
<!-- /Main Site-->

<!-- include footer -->
<%- include('include/_footer')%>
<!-- /include footer-->
