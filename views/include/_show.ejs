<% for(var i = 0; i < users.length; i++) { %>
<tr>
   <td><%= i + 1 %></td>
   <td><%= users[i].name %></td>
   <td><%= users[i].position %></td>
   <td><%= users[i].team %></td>
   <td><%= users[i].performance %></td>
   <td>
      <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update">
        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span> 
      </a>
      <a class="btn border-shadow delete" data-user-id=<%= users[i]._id%>>
        <span class="text-gradient"><i class="fas fa-times"></i></span> 
      </a>
      <a href="/add-task" class="btn border-shadow report">
        <span class="text-gradient"><i class="fas fa-clipboard"></i></span>
     </a>
  </td>
</tr>
<% } %>