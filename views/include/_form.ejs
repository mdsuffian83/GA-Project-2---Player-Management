<!-- form handling-->
<form action="/api/users" method="POST" id="add_user">
   <div class="new_user">
      <div class="form-group">
         <label for="name" class="text-light">Name</label>
         <input type="hidden" name="id" value="">
         <input type="text" name="name" value="" placeholder="Mark Stoenis">
      </div>
      <div class="form-group">
         <label for="position" class="text-light">Position</label>
         <div class="radio inline">
            <input type="radio" id="radio-2" name="position" value="Goalkeeper">
            <label for="radio-2" class="radio-label">Goalkeeper</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-3" name="position" value="Defender">
            <label for="radio-3" class="radio-label">Defender</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-4" name="position" value="Midfield">
            <label for="radio-4" class="radio-label">Midfield</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-5" name="position" value="Striker">
            <label for="radio-5" class="radio-label">Striker</label>
         </div>
      </div>

      <div class="form-group">
         <label for="team" class="text-light">Team</label>
         <div class="radio inline">
            <input type="radio" id="radio-6" name="team" value="First-Team">
            <label for="radio-6" class="radio-label">First Team</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-7" name="team" value="Reserve-Team">
            <label for="radio-7" class="radio-label">Reserve Team</label>
         </div>
      </div>

      <div class="form-group">
         <label for="performance" class="text-light">Performance</label>
         <div class="radio inline">
            <input type="radio" id="radio-8" name="performance" value="Good">
            <label for="radio-8" class="radio-label">Good</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-9" name="performance" value="Bad">
            <label for="radio-9" class="radio-label">Bad</label>
         </div>
      </div>

      <div class="form-group">
         <button type="submit" class="btn text-dark update">Save</button>
      </div>

   </div>
</form>