<!-- include header -->
<%- include('include/_header')%>
<!-- /include header-->

<!-- Main Site-->
<main id="site-main">
   <div class="container">
      <div class="box-nav d-flex justify-between">
         <div class="filter">
            <a href="/tasks"><i class="fas fa-angle-double-left"></i>All Training</a>
         </div>
      </div>
      <div class="form-title text-center">
         <h2 class="text-dark">New Training</h2>
         <span class="text-light">Use the below form to create a new training</span>
      </div>

      <!-- add user form -->
      <!-- form handling-->
<form action="/api/tasks" method="POST" id="add_task">
   <div class="new_user">
      <div class="form-group">
         <label for="name" class="text-light">Name</label>
         <input type="hidden" name="id" value="">
         <input type="text" name="name" value="" placeholder="Mark Stoenis">
      </div>
      <div class="form-group">
         <label for="training" class="text-light">Training</label>
         <div class="radio inline">
            <input type="radio" id="radio-2" name="training" value="Physical">
            <label for="radio-2" class="radio-label">Physical</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-3" name="training" value="Technical">
            <label for="radio-3" class="radio-label">Technical</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-4" name="training" value="Tactical">
            <label for="radio-4" class="radio-label">Tactical</label>
         </div>
      </div>

      <div class="form-group">
         <label for="coach" class="text-light">Coaches</label>
         <div class="radio inline">
            <input type="radio" id="radio-5" name="coach" value="Samuel">
            <label for="radio-5" class="radio-label">Samuel</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-6" name="coach" value="George">
            <label for="radio-6" class="radio-label">George</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-7" name="coach" value="Marco">
            <label for="radio-7" class="radio-label">Marco</label>
         </div>
         <div class="radio inline">
            <input type="radio" id="radio-8" name="coach" value="Hernandez">
            <label for="radio-8" class="radio-label">Hernandez</label>
         </div>
      </div>

      <div class="form-group">
         <button type="submit" class="btn text-dark update">Save</button>
      </div>

   </div>
</form>
   </div>
</main>
<!-- /Main Site-->

<!-- include footer -->
<%- include('include/_footer')%>
<!-- /include footer-->